<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.porker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.porker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.porker.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.porker.MemoryGameActivity"
            android:configChanges="orientation|screenSize|uiMode"
            android:label="@string/title_activity_memory_game" >
        </activity>
        <activity
            android:name="com.porker.BlackJackActivity"
            android:configChanges="orientation|screenSize|uiMode"
            android:label="@string/title_activity_black_jack" >
        </activity>
        <activity
            android:name="com.porker.CardFlyingActivity"
            android:label="@string/title_activity_card_flying" >
        </activity>
    </application>

</manifest>
